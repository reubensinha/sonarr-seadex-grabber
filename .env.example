# Environment variables for sonarr-seadex-grabber
# Copy this file to .env and fill in your values

# Sonarr Configuration (REQUIRED)
SONARR_URL=http://your-sonarr-server:8989
SONARR_API_KEY=your-sonarr-api-key

# Sonarr Filtering Options (OPTIONAL)
SONARR_SERIES_TYPE=  # e.g., "anime", "standard" - leave empty for all types
SONARR_TAGS=  # Comma-separated list of tags (e.g., "anime,imported")

# qBittorrent Configuration (REQUIRED)
QB_URL=http://your-qbittorrent:8080
QB_USER=your-qbittorrent-username
QB_PASS=your-qbittorrent-password
QB_CATEGORY=anime-sonarr  # qBittorrent category for downloads

# Webhook Server Configuration (OPTIONAL)
WEBHOOK_HOST=localhost
WEBHOOK_PORT=8765
USE_WEBHOOK=false  # Set to true to enable webhook server

# General Settings (OPTIONAL)
STARTUP_SCAN=false
DATA_DIR=data
KNOWN_SERIES_FILE=known_series.json
SYNC_INTERVAL=86400

# API URLs (OPTIONAL - have defaults)
ANILIST_API_URL=https://graphql.anilist.co
COLLECTIONS_URL=https://releases.moe/api/collections/entries/records
TORRENT_URL=https://releases.moe/api/collections/torrents/records

# Scoring Configuration (OPTIONAL)
SCORING_IS_BEST_WEIGHT=2
SCORING_DUAL_AUDIO_WEIGHT=1
