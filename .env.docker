# Environment variables for Docker Compose
# Copy this file to .env and fill in your actual values

# Sonarr Configuration
SONARR_API_KEY=your-sonarr-api-key-here
SONARR_SERIES_TYPE=  # Optional: Type of series to monitor (e.g., "anime", "standard")
SONARR_TAGS=  # Optional: Comma-separated list of tags to filter series (e.g., "anime,imported")

# qBittorrent Configuration
QB_USER=your-qbittorrent-username
QB_PASS=your-qbittorrent-password
QB_CATEGORY=anime-sonarr  # qBittorrent category for downloads

# Webhook Configuration
USE_WEBHOOK=false  # Set to true to enable webhook server

# Media and Downloads Paths (for full stack deployment)
MEDIA_PATH=/path/to/your/media
DOWNLOADS_PATH=/path/to/your/downloads

# Optional: Timezone
TZ=UTC

# Optional: User/Group IDs (for Linux hosts)
PUID=1000
PGID=1000
